{% extends 'base.html.twig' %}

{% block title %}Quizes{% endblock %}
{% block JavaScript %}
<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
{% endblock %}
{% block StyleSheet %}
<link rel="stylesheet" href="../css/styles.css">
<link rel="stylesheet" type="text/css" href="../css/style.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<style>
@import url('https://fonts.googleapis.com/css?family=Amatic+SC');
body{
 margin: 0 auto;
 background-image: url("{{asset('img/backr.jpg')}}");
 background-repeat: no-repeat;
 
}
 
.container{
 width: 70%;
 height:100%;
 text-align: center;
 margin: 0 auto;
 background-color: rgba(44, 62, 80,0.7);
 margin-top: 10px;
 margin-bottom: 10px;
 margin-left:300px;
}

.btn-group button {
  color: white; /* White text */
  padding: 10px 24px; /* Some padding */
  cursor: pointer; /* Pointer/hand icon */
  float: left; /* Float the buttons side by side */
  
}
img{
    width:50%;
    height:50%;
}
/* Clear floats (clearfix hack) */
.btn-group:after {
  content: "";
  clear: both;
  display: table;
}
.sub{
    background:none;
    color:#D0CBDB;
    width:300px;
    height:100px;
    margin-top:10px;
    margin-bottom:10px;
    margin-left:20px;
    margin-right:20px;
    cursor:pointer;
    font-size:30px;
    border:4px solid #27043C;
    text-transform:uppercase;
    position:relative;
}
.sub::before,.sub::after{
    content:"";
    position:absolute;
    width:14px;
    height:4px;
    background:#D0CBDB;
    transform:sKewX(50deg);
    transition:.4s linear;
}
.sub::before{
    top:-4px;
    left:10%;
}
.sub::after{
    bottom:-4px;
    right:10%;
}
.sub:hover::before{
    left:80%;
}
.sub:hover::after{
    right:80%;
}
.create{
  background:#581845;
  color:#fff;
  border:none;
  position:relative;
  height:60px;
  font-size:1.6em;
  padding:0 2em;
  cursor:pointer;
  transition:800ms ease all;
  outline:none;
  margin-bottom:10px;
}
.create:hover{
  background:#fff;
  color:#581845;
}
.create:before,.create:after{
  content:'';
  position:absolute;
  top:0;
  right:0;
  height:2px;
  width:0;
  background: #581845 ;
  transition:400ms ease all;
}
.create:after{
  right:inherit;
  top:inherit;
  left:0;
  bottom:0;
}
.create:hover:before,.create:hover:after{
  width:100%;
  transition:2s ease all;
}
.btn {
  border: none;
  display: block;
  text-align: center;
  cursor: pointer;
  text-transform: uppercase;
  outline: none;
  overflow: hidden;
  position: relative;
  color: #fff;
  font-weight: 700;
  font-size: 15px;
  background-color: #222;
  padding: 17px 60px;
  margin: 0 auto;
  box-shadow: 0 5px 15px rgba(0,0,0,0.20);
}

.btn span {
  position: relative; 
  z-index: 1;
}

.btn:after {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  height: 490%;
  width: 140%;
  background: #78c7d2;
  -webkit-transition: all .5s ease-in-out;
  transition: all .5s ease-in-out;
  -webkit-transform: translateX(-98%) translateY(-25%) rotate(45deg);
  transform: translateX(-98%) translateY(-25%) rotate(45deg);
}

.btn:hover:after {
  -webkit-transform: translateX(-9%) translateY(-25%) rotate(45deg);
  transform: translateX(-9%) translateY(-25%) rotate(45deg);
}
</style>
{% endblock %}
{% block body %}
<div class="container">
   
 {% for Quiz in Quizzes%}
    {% set foo = Quiz.difficulty %}
  <div class="card" style="width: 300px; height:400px; display:inline-block; margin:10px;">
  <img src="{{asset('../img/Quizes/' ~ Quiz.ImageURL)}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{Quiz.Title}}</h5>
    <p class="card-text">{{Quiz.Description}}.</p>
    {% for i in 1..foo %}
    <span id="1one" style="font-size:20px;cursor:pointer;color:orange;"  class="fa fa-star checked"></span>
    {% endfor %}
    <br>
    <a href="#" style="text-decoration: none;" class=" btn-primary"><button class="btn" ><span>Update</span></button></a>
  </div>
</div>
 {% endfor %}
<br><br>

</div>

{% endblock %}