{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Contact Us{% endblock %}
{% block StyleSheet %}
<style>
body{
 margin: 0 auto;
 background-image: url("{{asset('img/backr.jpg')}}");
 background-repeat: no-repeat;
 background-size: 100% 100%;
}
 
.container{
 width: 500px;
 height: 610px;
 text-align: center;
 margin: 0 auto;
 background-color: rgba(44, 62, 80,0.7);
 margin-top: 10px;
 margin-bottom: 10px;
}

.btn-group button {
  color: white; /* White text */
  padding: 10px 24px; /* Some padding */
  cursor: pointer; /* Pointer/hand icon */
  float: left; /* Float the buttons side by side */
  
}
img{
    width:50%;
    height:50%;
}
/* Clear floats (clearfix hack) */
.btn-group:after {
  content: "";
  clear: both;
  display: table;
}
label {
 margin-top:10px;
 display:block;
 display:inline;
 }
 label.inline {
 display:inline;
 
 }
input, textarea, select, option {
 background-color:#FFF3F3;
 }
input, textarea, select {
 padding:3px;
 color: white;
  border: none;
  outline: none;
  background: none;
  border-bottom: 1px solid #320441;
 width:300px;
 height:70px;
 top:30px;
 bottom:30px;
 font-size:24px;
 
 }
 label{
     display:inline-block;
 }
 
</style>
{% endblock %}
{% block body %}

   <div class="container">
 <br><br><br>
 {{ form_start(form) }}
   {{ form_widget(form.Title) }}<br><br>
   {{ form_widget(form.Description) }}<br><br>
     <input type="submit" style="width: 300px;height:60px; border:2px solid black; padding: 15px 25px; color:white; font-size:30px;
       background:none;cursor: pointer; " value="Create Subject" class="btn-login" />
   <br><br>
  
   {{ form_end(form) }} 
 </div>
 
{% endblock %}
